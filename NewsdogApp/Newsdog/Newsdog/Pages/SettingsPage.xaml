            <Label Style="{x:DynamicResource TitleStyle}" Text="Enter your display name"/>
            <!--<Entry Style="{StaticResource LargeRedEntryStyle}" x:Name="displayEntryName"/>-->
                <Entry  Text="{Binding CurrentUser.DisplayName}"/>
